#:kivy 1.0.9

<Obstacle>:
    size: 50, 25 
    canvas.before:
        PushMatrix
        Rotate:
            axis: 0,0,1
            angle: self.angle
            origin: self.center
    canvas:
        Color:
            rgba: 1, 0, 1, 0.8
        Ellipse:
            pos: self.pos
            size: self.size          
    canvas.after:
        PopMatrix

<Vehicle>:
    size: 50, 25
    canvas.before:
        PushMatrix
        Rotate:
            axis: 0,0,1
            angle: self.angle
            origin: self.center
    canvas:
        Color:
            rgba: 0, 1, 0, 0.8
        Rectangle:
            pos: self.pos
            size: self.size
    canvas.after:
        PopMatrix

<Simulator>:
    actorVehicle: actor_vehicle

    Vehicle:
        id: actor_vehicle
