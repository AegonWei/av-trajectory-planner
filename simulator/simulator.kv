#:kivy 1.0.9

<Obstacle>:
    size: 50, 25 
    canvas.before:
        PushMatrix
        Rotate:
            axis: 0,0,1
            angle: self.angle
            origin: self.pos
    canvas:
        Color:
            rgba: 1, 0, 1, 0.8
        Line:
            width: 2.
            points: self.points          
    canvas.after:
        PopMatrix

<Vehicle>:
    size: 50, 25
    canvas.before:
        PushMatrix
        Rotate:
            axis: 0,0,1
            angle: self.angle
            origin: self.pos
    canvas:
        Color:
            rgba: 0, 1, 0, 0.8
        Line:
            width: 2.
            points: self.points
    canvas.after:
        PopMatrix

<Simulator>:
    actorVehicle: actor_vehicle

    Vehicle:
        id: actor_vehicle
